<div class="page-header">
  <h3><%= @senator.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt></dt>
      <dd><img src="<%= @senator.picture %>" width="70"></dd>



      <dt>Party</dt>
      <dd><%= @senator.party %></dd>


      <dt>State</dt>
      <dd><%= @senator.state %></dd>

      <dt>Telephone</dt>
      <dd><%= @senator.telephone %></dd>

      <dt>Email</dt>
      <dd><%= @senator.email %></dd>



      <dt>Expenses</dt>
      <dd><%= number_to_currency(@senator.expenses, unit: "R$", precision: 0) %></dd>

      <dt>Expense Detail</dt>

      <dd><a href="/senators/<%= @senator.id %>/expenses" class="btn btn-primary ">View expense detail</a></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/senators" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>
