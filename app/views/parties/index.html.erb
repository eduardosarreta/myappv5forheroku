<div class="page-header">
  <h1>
    Parties (<%= @parties.count %>)
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @parties.each do |party| %>
      <tr>
        <td><%= party.name %></td>
        <td>
          <a href="/parties/<%=party.id%>/deputies" class="btn btn-primary">Show Deputies</a>
          <a href="/parties/<%=party.id%>/senators" class="btn btn-info">Show Senators</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
