<div class="page-header">
  <h1>
    Your Senator Watchlist

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th></th>
        <th>Name</th>
        <th>Party</th>
        <th>State</th>
        <th>Expenses ('11-'14)</th>
        <th>Actions</th>
      </tr>

      <% @bookmarked_senators.each do |bookmarked_senator| %>
      <tr>
        <td><img src="<%=@senators.find(bookmarked_senator.senator_id).picture %>" width="70"></td>
        <td><%= @senators.find(bookmarked_senator.senator_id).name %></td>
        <td><%= @senators.find(bookmarked_senator.senator_id).party %></td>
        <td><%= @senators.find(bookmarked_senator.senator_id).state %></td>
        <td><%= number_to_currency(@senators.find(bookmarked_senator.senator_id).expenses, unit: "R$", precision: 0) %></td>
        <td>
          <a href="/senators/<%= bookmarked_senator.senator_id %>/expenses" class="btn btn-info">View expense detail</a>

          <a href="/delete_bookmarked_senator/<%= bookmarked_senator.id %>" class="btn btn-danger" rel="nofollow">Remove from Watchlist</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
