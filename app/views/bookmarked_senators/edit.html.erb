<!-- Validation failure messages -->
<% if @bookmarked_senator.errors.any? %>
  <% @bookmarked_senator.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Bookmarked Senator #<%= @bookmarked_senator.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_bookmarked_senator/<%= @bookmarked_senator.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @bookmarked_senator.user_id %>">
      </div>

      <!-- Label and input for senator_id -->
      <div class="form-group">
        <label for="senator_id" class="control-label">
          Senator
        </label>

        <input type="text" id="senator_id" name="senator_id" placeholder="Senator" class="form-control" value="<%= @bookmarked_senator.senator_id %>">
      </div>

      <button class="btn btn-warning">
        Update Bookmarked Senator
      </button>
      or
      <a href="/bookmarked_senators/<%= @bookmarked_senator.id %>">Cancel</a>
    </form>
  </div>
</div>
