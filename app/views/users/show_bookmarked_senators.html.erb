<div class="page-header">
  <h1>
    Your Bookmarked Senators (<%= @user.email %>)

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th></th>
        <th>Name</th>
        <th>Party</th>
        <th>State</th>
        <th>Expenses ('11-'14)</th>
        <th>Actions</th>
      </tr>

      <% @user.bookmarked_senators.each do |w| %>
      <tr>
        <td><img src="<%=w.senator.picture %>" width="70"></td>
        <td><%= w.senator.name %></td>
        <td><%= w.senator.party %></td>
        <td><%= w.senator.state %></td>
        <td><%= number_to_currency(w.senator.expenses, unit: "R$", precision: 0) %></td>
        <td>
          <a href="/senators/<%= w.senator.id %>/expenses" class="btn btn-info">View expense detail</a>

          <a href="/delete_bookmarked_senator/<%= w.id %>" class="btn btn-danger" rel="nofollow">Remove from Watchlist</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
