<div class="page-header">
  <h1>
    Your Bookmarked Deputies (<%= @user.email %>)

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th></th>
        <th>Name</th>
        <th>Party</th>
        <th>State</th>
        <th>Expenses ('11-'14)</th>
        <th>Actions</th>
      </tr>

      <% @user.bookmarked_deputies.each do |w| %>
      <tr>
        <td><img src="<%=w.deputy.picture %>" width="70"></td>
        <td><%= w.deputy.name %></td>
        <td><%= w.deputy.party %></td>
        <td><%= w.deputy.state %></td>
        <td><%= number_to_currency(w.deputy.expenses, unit: "R$", precision: 0) %></td>
        <td>
          <a href="/deputies/<%= w.deputy.id %>/expenses" class="btn btn-info">View expense detail</a>

          <a href="/delete_bookmarked_deputy/<%= w.id %>" class="btn btn-danger" rel="nofollow">Remove from Watchlist</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
