<div class="page-header">
  <h1>
    States (<%= @states.count %>)
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>State</th>
        <th>Actions</th>
      </tr>

      <tr>
        <%@states.each do |state|%>
        <td><%=state.name%> </td>
        <td>
          <a href="/states/<%=state.id%>/deputies" class="btn btn-primary">Show Deputies</a>
          <a href="/states/<%=state.id%>/senators" class="btn btn-info">Show Senators</a>
        </td>
      </tr>
      <% end %>

    </table>
  </div>
</div>
